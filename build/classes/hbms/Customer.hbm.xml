<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="logic.Customer" table="Customer">
    <id column="id" name="id" type="java.lang.Long">
      <generator class="increment"/>
    </id>
    <property column="phone" name="phone" type="java.lang.String"/>
    <property column="adres" name="adres" type="java.lang.String"/>
    <property column="name" name="name" type="java.lang.String"/>
    
    <set name="transactions" lazy="false">
        <key column="customer_id"/>
        <one-to-many class="logic.Transaction"/>
    </set>
  </class>
</hibernate-mapping>